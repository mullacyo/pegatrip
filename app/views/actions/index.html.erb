

	<% @actions.each do |x| %>
		<div class="card actions">
			<div class="card-body">
				<h5 class="card-title"><%=x.title%></h5>
				</br>
				<p class="card-text">
					<%= x.type %>
				</p>
				</br>	
					<%= x.description %>
				</br>
					<%= x.location %>
				</br>
					<%= x.time %>
				</br>
					<%= x.price %>
				</br>	
				 	<%= x.id %>
				</br>	
					<% if x.picture != nil %>
					<%= image_tag x.picture %>
					</br>
					<% end %>
	<%= link_to 'Add action to trip', trip_action_create_path(params[:trip_id], x.id, method: :patch) %>
			</div>
		</div>


	<% end %>

	







