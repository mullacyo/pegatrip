<div class="container mx-auto mt-5">
<div class= "profile">

 <div class="row">
   <div class="col-6">

		<div class= "name">
			<h2><%= "#{@user.first_name} #{@user.last_name}" %></h2>
		</div>

		<p>Email: <%=@user.email%> </p>
		<% if @user.interest == nil %>
			<p> Interest:<i> You don't have any interests now. Please go to <b>"Edit profile"</b> to add an activity that you would like to include in your random trips. </i></p>
		<% else %>
			<p>Interest: <%=@user.interest%></p>
		<%end%>
   </div>

   <div class="col-6">
		<div class= "profile-pic-container" id="profile-pic-center">

			<% if @user.avatar.url == nil%>
				<%= image_tag "/default_profile.png", :class => "profilepic"%>
			<% else %>
			 	<%= image_tag @user.avatar.url, :class => "profilepic"%> 
			<% end %>

		</div>

	</div>
 </div>

</div>
<br/><br/> <hr> <br/>

<%= link_to "Redirect", "/redirect" %>




<% if @user.trips == [] %>
	<p> You don't have any trips yet. </p>
	<% else %>
			<div class="timeline mx-auto">
    	<% @trips.each do |trip| %>
			  <div class="entry">
			    <div class="title">
			      <h3>Start date: <%=trip.start_date.strftime("%D")%> <br/>End date: <%=trip.end_date.strftime("%D")%></h3>
			      <a href="#"><p><%=trip.location%></p></a>
			    </div>
			    <div class="body">
			      <img src="/sightseeing.jpg" style="width: 50%; margin-left: 20px; border-radius: 100% ">
			    </div>
			  </div> <br/> <hr> <br/> 
        <%end%>
			</div>
<%end%>

<script>
	
	$('.navbar').css('border-bottom', '1px solid rgba(0,0,0,.1)')
</script>
