<div class= "profile">

 <div class="row">
   <div class="col-6">

		<div class= "name">
		<h2><%= "#{@user.first_name} #{@user.last_name}" %></h2>
		</div>

		<p>Email: <%=@user.email%> </p>

		<p>Interest: <%=@user.interest%></p>
		 <div>
		<button><%= link_to 'Edit profile', edit_user_path %></button>
		<%= button_to 'Delete', @user, method: :delete, data: {confirm: "You sure?"} %>
		</div>

   </div>

	<div class="col-6">
		<div class= "profile-pic-container">

			<% if @user.avatar.url != nil%>
			 <%= image_tag @user.avatar.url, id: "profilepic"%> 
			
			<% end %>
		 

		</div>
	</div>
 </div>

</div>







