<div class= "profile">

 <div class="row">
   <div class="col-6">

		<div class= "name">
		<h2><%= "#{@user.first_name} #{@user.last_name}" %></h2>
		</div>

		<p>Email: <%=@user.email%> </p>

		<p>Interest: <%=@user.interest%></p>
		 <div>
		 </br>
		<%= link_to 'Edit profile', edit_user_path,:class => "btn btn-outline", :style => "color: #3ac9c6; border-color: #3ac9c6; margin:5px;" %>


		<%= button_to 'Delete', @user, method: :delete, data: {confirm: "You sure?"}, :class => "btn btn-outline", :style => "color: red; border-color: red"%>
		</div>


   </div>

	<div class="col-6">
		<div class= "profile-pic-container">

			<% if @user.avatar.url != nil%>
			 <%= image_tag @user.avatar.url, id: "profilepic"%> 
			
			<% end %>

		</div>
		<div>
			<%= link_to 'View my trips', user_path, :class => "btn btn-outline", :style => "color: #3ac9c6; border-color: #3ac9c6; margin:10px;"%>
		</div>


	</div>
 </div>

</div>







