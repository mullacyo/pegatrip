<div class="container mx-auto">
<div class= "profile">

 <div class="row">
   <div class="col-6">

		<div class= "name">
			<h2><%= "#{@user.first_name} #{@user.last_name}" %></h2>
		</div>

		<p>Email: <%=@user.email%> </p>
		<p>Interest: <%=@user.interest%></p>

   </div>

   <div class="col-6">
		<div class= "profile-pic-container" id="profile-pic-center">

			<% if @user.avatar.url == nil%>
				<%= image_tag "/default_profile.png", :class => "profilepic"%>
			<% else %>
			 	<%= image_tag @user.avatar.url, :class => "profilepic"%> 
			<% end %>

		</div>

	</div>
 </div>

</div>
<br/><br/> <hr>

<h1 class="text-center h6 mb-3 font-weight-light"> Here are your upcoming trips: </h1>
<br/>

<% if @user.trips == [] %>
	<p> You don't have any trips yet. </p>
	<% else %>
		<div class="container-fluid col-lg-12 justify-content-center ">
		<% @user.trips.each do |trip| %>
			<div class="card bg-dark text-white justify-content-center mx-auto">
			  <img src="/activity.jpg" class="card-img" alt="...">
			  <div class="card-img-overlay">
			    <h5 class="card-title"><%= trip.location %> </h5>
			    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
			    <p class="card-text"><%= trip.updated_at%></p>
			  </div>
			</div>
			<br/>
			<hr>
			<br/>
		<%end%>
		</div>
<%end%>
</div>
