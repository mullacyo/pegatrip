<div class="container mx-auto">
<div class= "profile">

 <div class="row">
   <div class="col-6">

		<div class= "name">
			<h2><%= "#{@user.first_name} #{@user.last_name}" %></h2>
		</div>

		<p>Email: <%=@user.email%> </p>
		<p>Interest: <%=@user.interest%></p>

   </div>

   <div class="col-6">
		<div class= "profile-pic-container" id="profile-pic-center">

			<% if @user.avatar.url == nil%>
				<%= image_tag "/default_profile.png", :class => "profilepic"%>
			<% else %>
			 	<%= image_tag @user.avatar.url, :class => "profilepic"%> 
			<% end %>

		</div>

	</div>
 </div>

</div>
<br/><br/> <hr>

<h1 class="text-center h6 mb-3 font-weight-light"> Here are your upcoming trips: </h1>
<br/>

<% if @user.trips == [] %>
	<p> You don't have any trips yet. </p>
	<% else %>

<div class="trip-container">
    	<% @user.trips.each do |trip| %>
      <div><%=trip.location%></div>
      <%end%>
</div>
 
<%end%>


