<div class="content-title flex-container">
    <div>
        <h3 id="activities-title" class="d-inline" style="size: 1.5rem; margin-top: 20px">Activities</h3> 
        <button type="button" class="btn btn-default btn-sm d-none">
                <i class="fas fa-edit"></i>
        </button>    
    </div>
</div>

<div class="activities-container d-flex justify-content-center" style="flex-grow">
    <% @activities[x..y].each_with_index do |a, n| %>
        <div class="card" style="width: 18rem; overflow: hidden">
                <%if FastImage.size(a.picture) == nil %>
                    <%= image_tag('/alt.png', :class => "card-img-top", :alt => "Card image cap") %>
                <%else%>
                    <%= image_tag(a.picture, :class => "card-img-top", :alt => "Card image cap") %>
                <%end%>
                <div class="card-body">
                    <h5 class="card-title"><%=a.title%></h5>
                    <div>           
                        <%= image_tag match_stars(@ratings['activities'][x+n], "regular")%> based on <%=link_to "#{@reviews['activities'][x+n]} reviews", a.link %> 
                    </div>
                    <div class="float-right align-bottom" style="vertical-align: bottom">
                        Powered by <%= image_tag "yelp_logo/Yelp_trademark_RGB_outline", :style => "width: 80px; margin: 0px" %>
                    </div>
                    <p class="actionid d-none"><%=a.id%></p>
                </div>
        </div>
    <% end %>
</div>