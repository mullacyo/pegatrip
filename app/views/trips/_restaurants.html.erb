<div class="content-title">
    <h3 class="d-inline">Restaurants</h3> 
    <button type="button" class="btn btn-default btn-sm">
            <i class="fas fa-edit"></i>
    </button>
</div>

<div class="activities-container d-flex justify-content-center" style="flex-grow">
    <% @restaurants[x..y].each_with_index do |r, n| %>
        <div class="card" style="width: 18rem; d-inline-block">
                <img class="card-img-top" src=<%= "#{r.picture}"%> alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><%=r.title%></h5>
                    <div>           
                        <%= image_tag match_stars(@ratings['foods'][x+n], "regular")%> based on <%=link_to "#{@reviews['foods'][x+n]} reviews", r.link %> 
                    </div>
                    <div class="float-right align-bottom" style="vertical-align: bottom">
                        Powered by <%= image_tag "yelp_logo/Yelp_trademark_RGB_outline", :style => "width: 80px; margin: 0px" %>
                    </div>
                    <p class="actionid d-none"><%=r.id%></p>
               </div>     
        </div>
    <% end %>
</div>